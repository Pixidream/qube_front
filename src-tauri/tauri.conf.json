{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qube",
  "version": "0.1.0",
  "identifier": "com.pixidream.qube",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "https://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "qube",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "devCsp": "default-src 'self' https: data: blob:; connect-src https://127.0.0.1:3000 https://localhost:1420;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
