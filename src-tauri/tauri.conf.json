{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qube",
  "version": "0.1.1",
  "identifier": "com.pixidream.qube",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Qube",
        "width": 800,
        "height": 600,
        "useHttpsScheme": true,
        "maximized": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' https: data: blob:",
        "connect-src": "ipc: http://ipc.localhost https://127.0.0.1:3000 https://192.168.1.47:3000 https://localhost:1420 http://localhost:1420 https://api.iconify.design https://api.simplesvg.com https://api.unisvg.com",
        "style-src": "'unsafe-inline' 'self'",
        "img-src": "'self' asset: blob: data:"
      },
      "devCsp": {
        "default-src": "'self' https: data: blob:",
        "connect-src": "ipc: http://ipc.localhost https://192.168.1.47:3000 https://127.0.0.1:3000 https://localhost:1420 http://localhost:1420 https://api.iconify.design https://api.simplesvg.com https://api.unisvg.com",
        "style-src": "'unsafe-inline' 'self'",
        "img-src": "'self' asset: blob: data:"
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "qube"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU2QkRCQzdFMEQ2NERBNEUKUldSTzJtUU5mcnk5VmlFSTBpc2N0Z1NtT2pNOXJMYlVJTC9QbmthM1BrUDZKVWZIdkJISXlQaHYK",
      "endpoints": [
        "https://f003.backblazeb2.com/file/qube-updater/latest.json"
      ]
    }
  }
}
